<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draweritem_about_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/drawer_item_selector"
    android:foreground="@drawable/drawer_item_list_ripple"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp">

    <ImageView
        tools:ignore="ContentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_oui_list" />

    <TextView
        android:id="@+id/drawer_item_text_view"
        style="?android:attr/textAppearanceLarge"
        tools:ignore="RtlSymmetry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:paddingStart="15dp"
        android:singleLine="true"
        android:text="@string/about_app"
        android:textAlignment="viewStart"
        android:textSize="18sp" />
</LinearLayout>